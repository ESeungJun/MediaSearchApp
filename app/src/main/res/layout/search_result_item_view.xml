<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewData"
            type="com.project.mediasearchapp.main.view.search.presentation.data.SearchViewData" />

        <variable
            name="viewModel"
            type="com.project.mediasearchapp.main.view.search.presentation.viewmodel.ISearchResultItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgThumbnail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:set_image_url="@{viewData.imageUrl}"/>

        <ImageView
            android:id="@+id/imgFavorite"
            app:layout_constraintRight_toRightOf="@+id/imgThumbnail"
            app:layout_constraintTop_toTopOf="@+id/imgThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="@{() -> viewModel.onClickFavorite(viewData)}"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/txtDateTime"
            app:layout_constraintLeft_toRightOf="@+id/imgThumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewData.dateTime}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>